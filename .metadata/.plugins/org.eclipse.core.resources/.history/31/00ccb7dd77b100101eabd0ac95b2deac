# =========================================
#CONFIGURACIÓN GENERAL
# =========================================
#nombre de la aplicacion
spring.application.name=ArreglaGo
#definir el puerto con el que correra la aplicacion
server.port=8899
#url del proyecto
server.servlet.context-path=/arreglago

# =========================================
# CONEXIÓN A BASE DE DATOS
# =========================================
#cadena de conexion
spring.datasource.url=jdbc:mysql://localhost:3309/arregla_go?useSSL=false&serverTimezone=America/Lima
#usuario de la bd
spring.datasource.username=root
#clave de la bd
spring.datasource.password=root
#driver
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Forzar a Hibernate a respetar tus nombres tal cual están en MySQL
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

# =========================================
# CONFIGURACIÓN DE JPA / HIBERNATE
# =========================================
# update → actualiza automáticamente las tablas (puedes usar validate en producción)
spring.jpa.hibernate.ddl-auto=update
# Muestra las consultas SQL en la consola
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
# Dialecto para MySQL 8+
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# =========================================
# CONFIGURACIÓN DE THYMELEAF
# =========================================
spring.thymeleaf.prefix=classpath:/templates/
spring.thymeleaf.suffix=.html
spring.thymeleaf.mode=HTML
spring.thymeleaf.encoding=UTF-8
spring.thymeleaf.cache=false

# =========================================
# ARCHIVOS ESTÁTICOS (CSS, JS, IMÁGENES)
# =========================================
spring.web.resources.static-locations=classpath:/static/
spring.mvc.static-path-pattern=/static/**

# =========================================
# ZONA HORARIA / LOCALIZACIÓN (Opcional)
# =========================================
spring.jackson.time-zone=America/Lima
spring.jackson.locale=es_PE
